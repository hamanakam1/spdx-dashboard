<table class="table table-bordered table-hover table-spdx">

  <% spdx_docs.each do |spdx_doc| %>
    <tr>
      <td class="td-main">
        <%= link_to spdx_doc.name, spdx_doc %>
      </td>

      <td class="controls greybox">
        <p>
          <i class="icon-time"></i>
          <%= friendly_date(spdx_doc.created_at) %>
        </p>

        <div class="btn-toolbar">
          <div class="btn-group">
            <%= link_to(spdx_doc.upload.url, class: "btn") do %>
              <i class="icon-download-alt"></i>
              download
            <% end %>

            <%= link_to(compare_spdx_doc_path(spdx_doc), class: "btn") do %>
              <i class="icon-exchange"></i>
              compare
            <% end %>
          </div>
        </div>
      </td>
    </tr>
  <% end %>
</table>